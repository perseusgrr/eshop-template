{
  "name": "eversh2op",
  "version": "1.2.2",
  "type": "module",
  "description": "A shopping cart platform with Express, React and Postgres",
  "workspaces": [
    "packages/*",
    "extensions/*"
  ],
  "scripts": {
    "dev": "tsx watch --tsconfig ./packages/evershop/tsconfig.json ./packages/evershop/src/bin/dev/index.ts",
    "setup": "evershop install",
    "compile": "rimraf packages/evershop/dist && tsc -p packages/evershop/tsconfig.json && copyfiles -u 3 \"packages/evershop/src/**/*.{graphql,scss,json}\" packages/evershop/dist",
    "compile-query-builder": "tsc -p packages/postgres-query-builder/tsconfig.json",
    "build": "rimraf packages/evershop/dist && tsc -p packages/evershop/tsconfig.json && copyfiles -u 3 \"packages/evershop/src/**/*.{graphql,scss,json}\" packages/evershop/dist && node packages/evershop/dist/bin/evershop.js build",
    "build-no-compile": "node packages/evershop/dist/bin/evershop.js build",
    "start": "node ./packages/evershop/dist/bin/start/index.js",
    "start:watch": "tsx watch --tsconfig ./packages/evershop/tsconfig.json ./packages/evershop/src/bin/start/index.ts",
    "user:create": "evershop user:create",
    "user:changePassword": "evershop user:changePassword",
    "start:debug": "node ./packages/evershop/dist/bin/start/index.js --debug",
    "test": "ALLOW_CONFIG_MUTATIONS=true NODE_OPTIONS=--experimental-vm-modules node_modules/jest/bin/jest.js",
    "cypress": "cypress run",
    "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "prepare": "husky install",
    "typescript-build": "rimraf dist && tsc -p tsconfig.json && copyfiles ./**/*.graphql dist/ && copyfiles ./pages dist/",
    "watch": "tsc --watch"
  },
  "author": "The Nguyen (https://evershop.io)",
  "license": "GNU GENERAL PUBLIC LICENSE 3.0",
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.14.8",
    "@babel/node": "^7.14.7",
    "@babel/preset-typescript": "^7.27.1",
    "@evershop/evershop": "^1.2.2",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "cypress": "^13.15.1",
    "eslint": "^9.24.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "2.8.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "tailwindcss": "^3.2.1",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3",
    "webpack-bundle-analyzer": "^4.5.0"
  },
  "dependencies": {
    "@types/node": "^22.13.14",
    "copyfiles": "^2.4.1"
  }
}
